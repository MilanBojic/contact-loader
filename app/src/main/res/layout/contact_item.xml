<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_size">

    <ImageView
        android:id="@+id/contact_item_avatar"
        android:layout_width="@dimen/avatar_image_size"
        android:layout_height="@dimen/avatar_image_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_micro"
        android:layout_marginStart="@dimen/spacing_micro"
        android:background="@android:color/transparent"
        android:contentDescription="Buddy list item - avatar icon"
        android:scaleType="centerInside"
        tools:ignore="HardcodedText"
        tools:src="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginLeft="@dimen/icon_size_toolbar"
        android:layout_marginRight="@dimen/spacing_large" android:layout_marginStart="@dimen/icon_size_toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/contact_item_first_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="@dimen/text_size_large"
                tools:ignore="UnusedAttribute"
                tools:text="Roger" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
